<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/car_view_active_product"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp">


    <LinearLayout
        android:id="@+id/constraint_active_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_num_product_active"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@+id/txt_product_name_product_active"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/product_name"
                android:textColor="@color/yellow"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_quantity_prosuct_active"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/quantity"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/yellow" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/num_product_active"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/black">

            </TextView>

            <TextView
                android:id="@+id/product_name_product_active"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp">

            </TextView>

            <TextView
                android:id="@+id/quantity_product_active"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>
    </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_view_active_product"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:weightSum="3">

            <Button
                android:id="@+id/btn_view_active_product"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/view"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/small_curv_yellow_btn"/>

            <Button
                android:id="@+id/btn_modify_active_product"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="@string/modify"
                android:textColor="@color/white"
                android:background="@drawable/small_curv_yellow_btn"/>

            <Button
                android:id="@+id/btn_delete_active_product"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/delete"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:background="@drawable/small_curv_yellow_btn"/>

        </LinearLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>