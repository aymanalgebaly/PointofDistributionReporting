<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_name_delivery_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/green"
                android:text="@string/name"
                android:layout_marginStart="3dp"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/txt_date_delivery_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/date"
                android:layout_marginStart="3dp"
                android:textColor="@color/green"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/name_delivery_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginStart="3dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text=""/>
            <TextView
                android:id="@+id/date_delivery_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text=""/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/BTN_View_Delivery_History"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/field_design_green"
                android:layout_centerHorizontal="true"
                android:text="@string/view"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>