<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.POD.ActiveFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/txt_pod_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/active_orders"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:drawablePadding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/circle_tab_pink"
        android:drawableStart="@drawable/circle_tab_pink"
        android:layout_marginStart="10dp"
        tools:ignore="RtlHardcoded" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/txt_pod_active"
        android:id="@+id/RV_list_active_pod"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>