<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ForgotPassActivity">

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/yellow"
        android:layout_alignParentEnd="true">

    </View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/logo_text_front"
            android:layout_gravity="center_horizontal"/>


    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="100dp"
        >


    <TextView
        android:id="@+id/forgot_pass_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_your"
        android:textSize="15sp"
        android:layout_margin="2dp"
        android:textColor="@color/black"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/PASSWORD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30sp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/select_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginTop="2dp"
        android:text="@string/select_which_contact_details_should_we_use_to"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/reset_txt"
        android:textSize="10sp"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_your_password"
        tools:ignore="RtlHardcoded" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_gravity="center_vertical">

            <RelativeLayout
                android:id="@+id/RV_via_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/signup_design">
                <LinearLayout
                    android:id="@+id/Lin_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/View_sms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/via_sms"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginStart="3dp"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>

                <EditText
                    android:id="@+id/Enter_phone_num"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/Lin_two"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edite_text"
                    android:drawableStart="@drawable/ic_phone_android_black_24dp"
                    android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                    android:drawableEnd="@drawable/check_uncheck_forgot_pass"
                    android:drawableRight="@drawable/check_uncheck_forgot_pass"
                    android:drawablePadding="15dp"
                    android:hint=".. ... ... 1946"
                    android:inputType="phone"
                    android:textSize="12sp"
                    tools:ignore="RtlHardcoded" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@id/RV_via_sms"
                android:id="@+id/RV_via_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/signup_design">
                <LinearLayout
                    android:id="@+id/Lin_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/View_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/via_email"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginStart="3dp"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>

                <EditText
                    android:id="@+id/Enter_email"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/Lin_four"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edite_text"
                    android:drawableStart="@drawable/ic_email_black_24dp"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:drawableEnd="@drawable/check_uncheck_forgot_pass"
                    android:drawableRight="@drawable/check_uncheck_forgot_pass"
                    android:drawablePadding="15dp"
                    android:hint=".....12@email.com"
                    android:inputType="textEmailAddress"
                    android:textSize="12sp"
                    tools:ignore="RtlHardcoded" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="110dp">

        </View>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/field_design_yellow"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="end"
            android:text="@string/reset" />

    </LinearLayout>
    </ScrollView>


</RelativeLayout>