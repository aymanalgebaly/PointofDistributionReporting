<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.POD.ModifyPodFragment">

    <!-- TODO: Update blank fragment layout -->
    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/pink"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:ignore="RtlHardcoded" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/modify_pod_order"
                android:textColor="@color/pink"
                android:textStyle="bold"
                android:textSize="18sp"
                android:drawablePadding="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_add_circle_pink_24dp"
                android:drawableStart="@drawable/ic_add_circle_pink_24dp"
                android:layout_marginStart="10dp"
                tools:ignore="RtlHardcoded" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:id="@+id/img_modify"
                android:layout_height="100dp"
                android:background="@mipmap/ic_launcher"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/txt_publication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/publication_type"
                android:textColor="@color/pink"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/Puplication_modify"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:background="@drawable/edite_text_curv"
                android:paddingStart="6dp" />

            <TextView
                android:id="@+id/txt_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight"
                android:textColor="@color/pink"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/Weight_modify"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:background="@drawable/edite_text_curv"
                android:paddingStart="6dp" />

            <TextView
                android:id="@+id/txt_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quantity"
                android:textColor="@color/pink"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/Quantity_modify"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:background="@drawable/edite_text_curv"
                android:paddingStart="6dp" />

            <TextView
                android:id="@+id/txt_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city"
                android:textColor="@color/pink"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/City_modify"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:background="@drawable/edite_text_curv"
                android:paddingStart="6dp" />

            <TextView
                android:id="@+id/txt_startDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_date"
                android:textColor="@color/pink"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/StartDate_Calendar"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:background="@drawable/edite_text_curv"
                android:paddingStart="6dp" />

            <TextView
                android:id="@+id/txt_endDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_date"
                android:textColor="@color/pink"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/EndDate_Calendar"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:background="@drawable/edite_text_curv"
                android:paddingStart="6dp" />

            <TextView
                android:id="@+id/txt_itemSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_size"
                android:textColor="@color/pink"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/itemSize_Modify"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:background="@drawable/edite_text_curv"
                android:paddingStart="6dp" />

            <Button
                android:id="@+id/BTN_SAVE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:textColor="@color/white"
                android:background="@drawable/field_design_new_button"
                android:layout_marginBottom="10dp"
                android:layout_gravity="end"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="3dp"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>