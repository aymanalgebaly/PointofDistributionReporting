<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.product.ProductActiveFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/txt_product_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/active_product"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        android:textSize="18sp"
        android:drawablePadding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/tab_circle_yellow"
        android:drawableStart="@drawable/tab_circle_yellow"
        android:layout_marginStart="10dp"
        tools:ignore="RtlHardcoded" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:layout_below="@id/txt_product_active"
        android:id="@+id/RCV_Active_Product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/BTN_Check_quantity_pro_active">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/BTN_Check_quantity_pro_active"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/field_design_yellow"
        android:text="@string/check_quantity"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>

</RelativeLayout>