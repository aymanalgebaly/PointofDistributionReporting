<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/txt_num_view_personnel_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text=""
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/edite_text_strok"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_agent_name_view_personnel_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agent_name"
                android:gravity="center_horizontal"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/agent_name_view_personnel_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/edite_text_strok"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/txt_agent_location_view_personnel_design"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/agent_location"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:layout_marginStart="3dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/phone_number"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:layout_marginStart="3dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/agent_location_view_personnel_design"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:layout_marginStart="3dp"/>

            <TextView
                android:id="@+id/phone_num_view_personnel_design"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:layout_marginStart="3dp"/>
        </LinearLayout>

    </LinearLayout>

        <Button
            android:id="@+id/BTN_View_View_Personnel"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/field_design_blue"
            android:layout_margin="5dp"
            android:text="@string/view"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>